{
  "name": "fsl-slicer",
  "label": "FSL slicer",
  "description": "This tool implements FSL's slicer command for generating images (png) from a volume (nifti). By default will create a 4x6 montage of slices through the volume.",
  "author": "D3b-TIRU",
  "url": "https://github.com/d3b-center/fw-fsl-slicer",
  "source": "https://fsl.fmrib.ox.ac.uk/fsl/docs/#",
  "version": "0.1.1",
  "license": "Apache-2.0",
  "custom": {
    "gear-builder": {
      "category": "analysis",
      "image": "chop.flywheel.io/fsl-slicer:0.1.1"
    },
    "flywheel": {
      "suite": "FSL"
    }
  },
  "inputs": {
    "input": {
      "base": "file",
      "description": "Base image (nifti).",
      "type": {
        "enum": [
          "nifti"
        ]
      }
    }
  },
  "config": {
    "mid_slices": {
      "default": false,
      "description": "output mid-sagittal, -coronal and -axial slices into one image.",
      "type": "boolean",
      "id": "-a"
    }
  },
  "environment": {
    "FLYWHEEL": "/flywheel/v0",
    "FSLDIR": "/usr/share/fsl/6.0",
    "FSLMULTIFILEQUIT": "TRUE",
    "FSLOUTPUTTYPE": "NIFTI_GZ",
    "FSLTCLSH": "/usr/bin/tclsh",
    "FSLWISH": "/usr/bin/wish",
    "FSL_DIR": "/usr/share/fsl/6.0",
    "LD_LIBRARY_PATH": "/usr/share/fsl/6.0/lib:",
    "PATH": "/usr/share/fsl/6.0/bin/:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin",
    "POSSUMDIR": "/usr/share/fsl/6.0/",
    "PWD": "/flywheel/v0"
  }
}